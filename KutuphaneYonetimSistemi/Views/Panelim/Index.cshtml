
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>

<table class="table table-hover" style="margin-top:30px;">
    <tr>
        <td>Mail Adresi: @HttpContext.Current.User.Identity.Name</td>
    </tr>
    <tr>
        <td>Ad: @Session["ad"].ToString()</td>
    </tr>
    <tr>
        <td>Soyad: @Session["soyad"].ToString()</td>
    </tr>
    <tr>
        <td>Kullanıcı Adı: @Session["kullanıcıadı"].ToString()</td>
    </tr>
    <tr>
        <td>Şifre: @Session["sifre"].ToString()</td>
    </tr>
    <tr>
        <td>Okul: @Session["okul"].ToString()</td>
    </tr>
    <tr> <td><button class="btn btn-warning">Şifreyi Güncelle</button></td>  </tr>
</table>